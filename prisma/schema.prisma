generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum role {
  Brand
  celeb
}
enum status{
  active
  pending
  done
}


model Celeb {
  id       String   @id @default(cuid())
  name     String
  email     String @unique
  password String
  role     role
  category String 
  bio String?
  followers Int? @default(0)
  instagramUsername String?
  youtubeUsername String?



}

model Brand {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  role     role
}

model Campaigns {
  id          String @id @default(cuid())
  name        String
  description String
  budget        Int
  sDate         DateTime @default(now()) @db.Date
  eDate DateTime
  role        role
  status status @default(active)
}


